<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.brcd.mapper.PersonageMessageMapper">
    <select id="queryAgentMsg" parameterType="TbAgent" resultType="TbAgent">
		SELECT id,company_affiliation,attribution_department,name,email,phone,mobile_phone,remark,account_type,user_type,role,last_ip,last_login_time FROM tb_agent
		        WHERE id=#{id};
    </select>
    <update id="updatePersonageMsg" parameterType="TbAgent">
         UPDATE tb_agent SET email=#{email},phone=#{phone},mobile_phone=#{mobilePhone},remark=#{remark} WHERE id=#{id};
    </update>
</mapper>